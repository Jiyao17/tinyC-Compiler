

int do_addition(int a, int b)
{
    if (a == 0)
        a = a + b;
    
    return (a+b);
}


int main(void)
{
    int a = 0;
    int b = 0;
    int c = 0;

    printf("please input two integer values separated by whitespace:\n");
    scanf("%d %d", &a, &b);

    c = do_addition(a, b);

    printf("%d + %d = %d \n", a, b, c);

    return 0;
}